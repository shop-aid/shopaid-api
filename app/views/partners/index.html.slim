  tbody.sortable
    - @partners.each_with_sortable_id do |partner, sortable_id|

      tr id="#{sortable_id}"
        td = image_tag partner.logo.url(:thumb)
        td = partner.name
        td = partner.percentage
        td = link_to 'Show', partner
        td = link_to 'Edit', edit_partner_path(partner)
        td = link_to 'Destroy', partner, data: { confirm: 'Are you sure?' }, method: :delete

